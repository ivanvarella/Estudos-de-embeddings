# Arquivo de exemplo para variáveis de ambiente
# Este arquivo uma cópia do .env original, com a remoção da chave OPENAI_API_KEY 
# Copie para .env e configure suas chaves

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# ELASTICSEARCH CACHE CONFIGURATION
# =============================================================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
USE_ELASTICSEARCH_CACHE=true
FORCE_REGENERATE_EMBEDDINGS=false
ELASTICSEARCH_TIMEOUT=30
ELASTICSEARCH_MAX_RETRIES=3

# =============================================================================
# NOTEBOOK CONFIGURATION
# =============================================================================
# Configurações de processamento de texto
# Limite conservador para garantir que não exceda 8192 tokens da API OpenAI
# 24000 chars ≈ 6000-8000 tokens (dependendo do texto)
MAX_CHARS_PER_REQUEST=28000
BATCH_SIZE_SMALL_TEXTS=4
BATCH_SIZE_MEDIUM_TEXTS=2
BATCH_SIZE_LARGE_TEXTS=1

# Configurações do dataset
DATASET_SIZE=20000
TEXT_MIN_LENGTH=20

# Configurações de clustering
MAX_CLUSTERS=20
CLUSTERING_RANDOM_STATE=42

# Configurações de visualização
PLOT_WIDTH=800
PLOT_HEIGHT=600

# Configurações de logging e salvamento
LOG_LEVEL=INFO
SAVE_MODELS=true
SAVE_RESULTS=true

# =============================================================================
# CONFIGURAÇÕES AVANÇADAS (opcional)
# =============================================================================
# Configurações de performance
EMBEDDING_BATCH_SIZE=32
CACHE_CHUNK_SIZE=1000

# Configurações de debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
